{
  "nodeModules": {
    "modules": "./node_modules",
    "js": [
      "./node_modules/jquery/dist/jquery.min.js",
      "./node_modules/socket.io-client/dist/socket.io.min.js",
      "./node_modules/craftyjs/dist/crafty-min.js"
    ],
    "css": [
      "./node_modules/bootstrap/dist/css/*.css"
    ]
  },
  "src": "./src",
  "assets": "./src/**/assets/*.*",
  "index": "./src/index.pug",
  "js": [
    "./src/**/*.js",
    "!./src/**/*.mocha.js"
  ],
  "css": ["./src/**/*.css"],
  "dest": {
    "path": "./dist",
    "assets": "./dist/assets",
    "src": {
      "js": "./src/js"
    }
  },
  "clean": {
    "path": "./dist/**/*.*"
  }
}
